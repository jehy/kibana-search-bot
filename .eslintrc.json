{
  "env": {
    "browser": false,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "standard",
    "promise"
  ],
  "rules": {
    "no-console": "off",
    "padded-blocks": "off",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "arrow-spacing": "off",
    "arrow-body-style": "off",
    "object-curly-spacing": "off",
    "prefer-destructuring": "warn",
    "no-mixed-operators": "off",
    "prefer-const": "warn",
    "no-unused-vars": "warn",
    "object-shorthand": "warn",
    "no-param-reassign": "warn",
    "no-multi-spaces": "off",
    "max-len": [
      "error",
      160
    ],
    "linebreak-style": [
      "error",
      "unix"
    ]
  }
}
